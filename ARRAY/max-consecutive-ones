#include <bits/stdc++.h>
using namespace std;
int main()
{
   vector<int>v;
   int i,num,m,n,maxx,c=0;
   cin>>n;
   for(i=0;i<n;i++)
   {
       cin>>num;
       v.emplace_back(num);
   }
   for(i=0;i<n;i++)
   {
       if(v[i] == 1 )
       {
           c++;
           m=c;
       }
       else
       {
           c=0;
       }
   }
   cout<<m;
    return 0;
}
